{
    "manifest_version": 2,	
    "name": "improved-seekrs",
    "version": "0.6.1",
  
    "description": "What if it was Purple ?",
  
    "icons": {
        "48": "assets/logo.png"
    },

    "browser_specific_settings": {
		"gecko": {
			"update_url": "https://raw.githubusercontent.com/seekrs/improved-seekrs/main/updates.json"
		}
	},

    "browser_action": {
        "default_popup": "popup/popup.html"
    },

    "permissions": ["storage", "webRequest", "webRequestBlocking", "https://*.intra.42.fr/*", "https://raw.githubusercontent.com/*"],

    "content_scripts": [
        {
            "matches": ["https://profile.intra.42.fr/", "https://profile.intra.42.fr/users/*"],
            "js": ["styling.js"]
        },
		{
			"matches": ["https://*.intra.42.fr/*"],
			"js": ["extra-styling.js"]
		}
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
