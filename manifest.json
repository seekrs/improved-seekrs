{
    "manifest_version": 2,	
    "name": "improved-seekrs",
    "version": "0.7.0",
  
    "description": "But what if it was Purple..?",
  
    "icons": {
        "48": "assets/logo.png"
    },

    "browser_specific_settings": {
		"gecko": {
			"update_url": "https://raw.githubusercontent.com/seekrs/improved-seekrs/main/updates.json"
		}
	},

    "permissions": ["webRequest", "webRequestBlocking", "https://*.intra.42.fr/*", "https://raw.githubusercontent.com/*"],

    "content_scripts": [
		{
			"matches": ["https://*.intra.42.fr/*"],
			"js": ["shared.js", "update-colors.js", "update-badges.js", "update-titles.js"]
		}
    ],

    "background": {
        "scripts": ["shared.js", "requests-override.js"]
    }
}
