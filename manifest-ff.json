{
    "manifest_version": 2,
    "name": "improved-seekrs",
    "version": "0.3",
  
    "description": "What if it was Purple ?",
  
    "icons": {
        "48": "assets/logo.png"
    },
  
    "browser_specific_settings": {
		"gecko": {
			"update_url": "https://raw.githubusercontent.com/y-syo/improved-seekrs/main/updates.json"
		}
	},

    "permissions": ["webRequest", "webRequestBlocking", "https://*.intra.42.fr/*"],

    "content_scripts": [
        {
            "matches": ["https://profile.intra.42.fr/*"],
			"exclude_matches": ["https://profile.intra.42.fr/blocs/64/coalitions"],
            "js": ["styling.js"]
        },
		{
			"matches": ["https://profile.intra.42.fr/blocs/64/coalitions"],
			"js": ["extra-styling.js"]
		}
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
